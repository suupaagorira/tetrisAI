{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CLI: Start (render every 10 steps)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start", "--"],
      "args": ["--games", "1", "--render", "--render-every", "10"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Tests: Vitest run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps",
        "VITEST_TIMEOUT": "20000"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "Training: offline trainer",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "train"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_OPTIONS": "--enable-source-maps"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
